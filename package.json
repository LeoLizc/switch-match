{
  "name": "switch-matcher",
  "version": "0.9.5",
  "author": {
    "name": "Leonardo Lizcano",
    "email": "leolizcanop@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LeoLizc/switch-matcher"
  },
  "description": "Simple lightweight match pattern",
  "scripts": {
    "build:node": "tsc -p tsconfig.node.json",
    "build:browser": "tsc -p tsconfig.web.json",
    "clean": "rimraf dist_node/",
    "build": "pnpm run build:node",
    "build:clean": "pnpm run clean && pnpm run build",
    "test": "jest",
    "prepublishOnly": "rimraf package && pnpm run build:clean && clean-publish",
    "postpublish": "rimraf package"
  },
  "exports": {
    ".": "./dist_node/index.js"
  },
  "types": "./dist_node/types",
  "dependencies": {
    "deep-equal": "^2.2.3"
  },
  "devDependencies": {
    "@types/deep-equal": "^1.0.4",
    "@types/jest": "^29.5.12",
    "clean-publish": "^4.4.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "directory": "tempPackage"
  },
  "clean-publish": {
    "files": ["src", ".gitignore", "tests", "dev", "tsconfig.json", "tsconfig.*.json"],
    "clean-comments": true,
    "packageManager": "yarn",
    "withoutPublish": true,
    "tempDir": "tempPackage"
  }
}